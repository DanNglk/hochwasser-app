<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="de.bitdroid.flooding"
		android:versionCode="1"
		android:versionName="1.0">

	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

	<permission android:name="de.bitdroid.flooding.permission.C2D_MESSAGE"
			android:protectionLevel="signature"/>
	<uses-permission android:name="de.bitdroid.flooding.permission.C2D_MESSAGE" />


	<application 
			android:label="@string/app_name" 
			android:icon="@drawable/ic_launcher"
			android:logo="@drawable/ic_menu_home"
            android:theme="@style/ThemeMain">
		<activity android:name=".main.MainActivity"
				  android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".map.MapActivity"
				  android:label="@string/app_name">
		</activity>

		<activity android:name=".alarms.NewAlarmActivity"
				  android:label="@string/app_name">
		</activity>

		<activity android:name=".levels.StationListActivity"
				  android:label="@string/app_name">
		</activity>

		<activity android:name=".levels.RiverGraphActivity"
				  android:label="@string/app_name">
		</activity>

        <activity android:name=".levels.RiverGraphHelpActivity"
                  android:label="@string/app_name">
        </activity>

		<activity android:name=".levels.StationGraphActivity"
				  android:label="@string/app_name">
		</activity>

        <service android:name=".levels.StationIntentService">
        </service>

		<service android:name=".ods.data.AuthenticatorService">
			<intent-filter>
				<action android:name="android.accounts.AccountAuthenticator"/>
			</intent-filter>
			<meta-data
					android:name="android.accounts.AccountAuthenticator"
					android:resource="@xml/authenticator" />
		</service>

		<provider
				android:name=".ods.data.OdsContentProvider"
				android:authorities="de.bitdroid.flooding.provider"
				android:exported="true"
				android:syncable="true"
				android:grantUriPermissions="true"
		/>

		<service 
				android:name=".ods.data.SyncService"
				android:exported="true"
				android:process=":sync">
			<intent-filter>
				<action android:name="android.content.SyncAdapter"/>
			</intent-filter>

			<meta-data
					android:name="android.content.SyncAdapter"
					android:resource="@xml/syncadapter" />
		</service>

		<receiver
				android:name=".ods.data.SyncStatusListener">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.data.ACTION_SYNC_START"/>
                <action android:name="de.bitdroid.flooding.ods.data.ACTION_SYNC_FINISH"/>
                <action android:name="de.bitdroid.flooding.ods.data.ACTION_SYNC_ALL_FINISH"/>
			</intent-filter>
		</receiver>

		<receiver
				android:name=".monitor.MonitorSyncListener">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.data.ACTION_SYNC_FINISH"/>
			</intent-filter>
		</receiver>

		<service android:name=".monitor.CopySourceService">
		</service>

		<!-- ODS GCM registration and updates -->
		<service android:name=".ods.data.GcmIntentService">
		</service>

		<receiver android:name=".ods.data.GcmManager$StatusUpdater">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.data.ACTION_GCM_FINISH"/>
			</intent-filter>
		</receiver>

		<receiver android:name=".ods.data.GcmReceiver">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category android:name="de.bitdroid.flooding" />
			</intent-filter>
		</receiver>

		<!-- CEPS GCM registration and updates -->
		<service android:name=".ods.cep.GcmIntentService">
		</service>

		<receiver android:name=".ods.cep.CepManagerImpl$StatusUpdater">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.cep.ACTION_GCM_FINISH"/>
			</intent-filter>
		</receiver>

		<receiver android:name=".ods.cep.GcmReceiver">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category android:name="de.bitdroid.flooding" />
			</intent-filter>
		</receiver>


		<!-- Alarms -->
		<receiver android:name=".alarms.EventReceiver">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.cep.ACTION_EVENT_RECEIVED"/>
			</intent-filter>
		</receiver>

		<service android:name=".alarms.EventReceiver$EventIntentService">
		</service>

		<receiver android:name=".alarms.EventReceiver$EventToNewsReceiver">
		</receiver>


		<meta-data
				android:name="com.google.android.gms.version"
				android:value="@integer/google_play_services_version"
		/>

	</application>
</manifest>
