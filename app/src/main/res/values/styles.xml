<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeMain" parent="ThemeMain.Base">
    </style>

    <style name="ThemeMain.Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ThemeMain.ActionBar</item>
    </style>

    <style name="ThemeMain.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:titleTextStyle">@style/ThemeMain.ActionBar.TitleText</item>
        <item name="android:subtitleTextStyle">@style/ThemeMain.ActionBar.SubTitleText</item>
    </style>

    <style name="ThemeMain.ActionBar.TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeMain.ActionBar.SubTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_light</item>
    </style>


    <style name="CardBackground">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

	<style name="CustomShowcaseTheme" parent="ShowcaseView">
		<item name="sv_backgroundColor">@color/showcase_background</item>
		<item name="sv_tintButtonColor">false</item>
	</style>

	<style name="FontHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/blue_dark</item>
		<item name="android:textSize">18dp</item>
	</style>

	<style name="FontRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="FontSecundary">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:textSize">12dp</item>
	</style>


    <style name="StationCard">
    </style>

    <style name="StationCard.Title">
        <item name="android:textAppearance">@style/FontRegular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="StationCard.Row">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="StationCard.Row.Left">
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/FontRegular</item>
    </style>

    <style name="StationCard.Row.Left.SmallContent">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="StationCard.Row.Right">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
        <item name="android:textAppearance">@style/FontRegular</item>
    </style>

    <style name="StationCard.Row.Right.SmallContent">
        <item name="android:layout_weight">1</item>
    </style>


    <style name="GraphHelp">
        <item name="android:textAppearance">@style/FontRegular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GraphHelp.SectionTitle">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="GraphHelp.Row">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="GraphHelp.LeftItem">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="GraphHelp.RightItem">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>
