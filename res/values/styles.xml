<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="CustomShowcaseTheme" parent="ShowcaseView">
		<item name="sv_backgroundColor">@color/showcase_background</item>
		<item name="sv_tintButtonColor">false</item>
	</style>

	<style name="FontHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/blue</item>
		<item name="android:textSize">18dp</item>
	</style>

	<style name="FontRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="FontSecundary">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:textSize">12dp</item>
	</style>


</resources>
