<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
    </style>

    <style name="FontHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="FontRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FontSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="FontSettings" parent="FontRegular">
        <item name="android:padding">20dp</item>
    </style>


    <style name="CardBackground">
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CardBackground.Large">
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom_large</item>
    </style>


    <style name="StationCard">
    </style>

    <style name="StationCard.Title">
        <item name="android:textAppearance">@style/FontRegular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="StationCard.Row">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="StationCard.Row.Left">
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/FontRegular</item>
    </style>

    <style name="StationCard.Row.Left.SmallContent">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="StationCard.Row.Right">
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">right</item>
        <item name="android:textAppearance">@style/FontRegular</item>
    </style>

    <style name="StationCard.Row.Right.SmallContent">
        <item name="android:layout_weight">1</item>
    </style>


    <style name="GraphHelp">
        <item name="android:textAppearance">@style/FontRegular</item>
    </style>

    <style name="GraphHelp.SectionTitle">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="GraphHelp.Row">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="GraphHelp.LeftItem">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="GraphHelp.RightItem">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
