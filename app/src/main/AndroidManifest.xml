<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="de.bitdroid.flooding"
		android:versionCode="2"
		android:versionName="1.0.1">

	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

	<application 
			android:label="@string/app_name"
            android:name=".main.MainApplication"
			android:icon="@drawable/ic_launcher"
			android:logo="@drawable/ic_action_logo"
            android:theme="@style/ThemeMain"
            android:allowBackup="true">
		<activity android:name=".main.MainActivity"
				  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

        <provider
            android:name="de.bitdroid.ods.data.OdsContentProvider"
            android:authorities="@string/content_provider_authority"
            android:exported="true"
            android:syncable="true"
            android:grantUriPermissions="true"
            />

		<activity android:name=".map.InfoMapActivity"
				  android:label="@string/app_name">
		</activity>

        <activity android:name=".alarms.NewAlarmActivity"
				  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustResize">
		</activity>

		<activity android:name=".levels.StationListActivity"
				  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustResize">
		</activity>

		<activity android:name=".levels.RiverGraphActivity"
				  android:label="@string/app_name">
		</activity>

        <activity android:name=".levels.RiverGraphHelpActivity"
                  android:label="@string/app_name">
        </activity>

		<activity android:name=".levels.StationActivity"
				  android:label="@string/app_name">
		</activity>

        <service android:name=".levels.StationIntentService">
        </service>

		<receiver
				android:name=".monitor.MonitorSyncListener">
			<intent-filter>
				<action android:name="de.bitdroid.ods.data.ACTION_SYNC_FINISH"/>
			</intent-filter>
		</receiver>

		<service android:name=".monitor.CopySourceService">
		</service>

		<!-- Alarms -->
		<receiver android:name=".alarms.EventReceiver">
			<intent-filter>
				<action android:name="de.bitdroid.ods.cep.ACTION_EVENT_RECEIVED"/>
			</intent-filter>
		</receiver>

		<meta-data
			android:name="com.crashlytics.ApiKey"
			android:value="6ae640ca185488710a3a658b71e06d695a109b71"
		/>

	</application>
</manifest>
