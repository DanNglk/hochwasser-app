<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeMain" parent="ThemeMain.Base">
    </style>

    <style name="ThemeMain.Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ThemeMain.ActionBar</item>
    </style>

    <style name="ThemeMain.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:titleTextStyle">@style/ThemeMain.ActionBar.Text</item>
        <item name="android:subtitleTextStyle">@style/ThemeMain.ActionBar.Text</item>
    </style>

    <style name="ThemeMain.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>


	<style name="CustomShowcaseTheme" parent="ShowcaseView">
		<item name="sv_backgroundColor">@color/showcase_background</item>
		<item name="sv_tintButtonColor">false</item>
	</style>

	<style name="FontHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/blue_dark</item>
		<item name="android:textSize">18dp</item>
	</style>

	<style name="FontRegular">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="FontSecundary">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/gray</item>
		<item name="android:textSize">12dp</item>
	</style>


</resources>
