<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="de.bitdroid.flooding"
		android:versionCode="1"
		android:versionName="1.0">

	<uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19"/>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

	<permission android:name="de.bitdroid.flooding.permission.C2D_MESSAGE"
			android:protectionLevel="signature"/>
	<uses-permission android:name="de.bitdroid.flooding.permission.C2D_MESSAGE" />


	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
		<activity android:name="MainActivity"
				  android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".map.MapActivity"
				  android:label="@string/app_name">
		</activity>

		<activity android:name=".levels.GraphActivity"
				  android:label="@string/app_name">
		</activity>

		<service android:name=".ods.AuthenticatorService">
			<intent-filter>
				<action android:name="android.accounts.AccountAuthenticator"/>
			</intent-filter>
			<meta-data
					android:name="android.accounts.AccountAuthenticator"
					android:resource="@xml/authenticator" />
		</service>

		<provider
				android:name=".ods.OdsContentProvider"
				android:authorities="de.bitdroid.flooding.provider"
				android:exported="true"
				android:syncable="true"
				android:grantUriPermissions="true"
		/>

		<service 
				android:name=".ods.SyncService"
				android:exported="true"
				android:process=":sync">
			<intent-filter>
				<action android:name="android.content.SyncAdapter"/>
			</intent-filter>

			<meta-data
					android:name="android.content.SyncAdapter"
					android:resource="@xml/syncadapter" />
		</service>

		<service android:name=".ods.GcmIntentService">
		</service>

		<receiver 
				android:name=".ods.GcmUtils">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.ACTION_GCM_FINISH"/>
			</intent-filter>
		</receiver>

		<receiver
				android:name=".ods.SyncStatusListener">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.ACTION_SYNC_FINISH"/>
			</intent-filter>
		</receiver>

		<receiver
				android:name=".monitor.MonitorSyncListener">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.ACTION_SYNC_FINISH"/>
			</intent-filter>
		</receiver>

		<service android:name=".monitor.CopySourceService">
		</service>

		<receiver
				android:name=".ods.GcmBroadcastReceiver">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<category android:name="de.bitdroid.flooding" />
			</intent-filter>
		</receiver>

		<receiver
				android:name=".GcmRegistrationReceiver">
			<intent-filter>
				<action android:name="de.bitdroid.flooding.ods.ACTION_GCM_FINISH"/>
			</intent-filter>
		</receiver>

		<meta-data
				android:name="com.google.android.gms.version"
				android:value="@integer/google_play_services_version"
			/>
	</application>
</manifest>
